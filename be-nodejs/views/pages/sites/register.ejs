<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Website bán điện thoại di động chính hãng M10</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="/css/admin-page.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="shortcut icon" type="image/png" href="/images/logo.png"/>
</head>
<body>
    <div class="container-scroller">
      <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth">
          <div class="row flex-grow">
            <div class="col-lg-4 mx-auto">
              <div class="auth-form-light text-left p-5">
                <div class="brand-logo">
                   <a href="/api/v1/home-page"><img src="../../images/logo.png" alt=""></a>
                </div>
                <h4>New here?</h4>
                <h6 class="font-weight-light">Signing up is easy. It only takes a few steps</h6>
                <form class="pt-3" action="/api/v1/register" method="POST">
                  <div class="form-group">
                    <input type="text" class="form-control form-control-lg" name="username" id="username" placeholder="Username">
                    <p id="error_text1"></p>
                  </div>
                  <div class="form-group">
                    <input type="email" class="form-control form-control-lg" name="email" id="email" placeholder="Email">
                    <p id="error_text3"></p>
                  </div>
                  <div class="form-group">
                    <input type="password" class="form-control form-control-lg" name="password" id="password" placeholder="Password">
                    <p id="error_text2"></p>
                  </div>
                  <% if (susscess.length > 0) { %>
                    <div class="alert alert-danger messages__susscess1"><%= susscess %> <a href="/api/v1/login">Login now !</a></div>
                    <% } %>
                  <% if (error.length > 0) { %>
                    <div class="alert alert-danger "><%= error %></div>
                    <% } %>
                  <% if (invalueUsername.length > 0) { %>
                    <div class="alert alert-danger "><%= invalueUsername %></div>
                    <% } %>
                  <% if (invaluePassword.length > 0) { %>
                    <div class="alert alert-danger "><%= invaluePassword %></div>
                    <% } %>
                  <% if (checkLengthPass.length > 0) { %>
                    <div class="alert alert-danger "><%= checkLengthPass %></div>
                    <% } %>
                  
                  <div class="text-center mt-4 font-weight-light"> Already have an account? <a href="/api/v1/login">Login</a>
                    <button type="submit" class=" mt-3 btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn">
                      SIGN UP
                    </button >
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
        <!-- content-wrapper ends -->
      </div>
      <!-- page-body-wrapper ends -->
    </div>

<script>

    const usernameElement = document.getElementById('username');
    const emailElement = document.getElementById('email');
    const passwordElement = document.getElementById('password');
    const errorElement = document.getElementById('error_text1');
    const errorElement2 = document.getElementById('error_text2');
    const errorElement3 = document.getElementById('error_text3');
    console.log(emailElement)
    usernameElement.onblur = function() {
    const valueUsername = document.getElementById('username').value;
      if (valueUsername == "" ) {
          errorElement.innerHTML = "Trường này không được để trống";
          errorElement.style.color = "red";
          usernameElement.style.border = "1px solid red";
      }else if(valueUsername.match(/\W/)) {
          errorElement.innerHTML = "Trường này không được điền ký tự đặc biệt";
          errorElement.style.color = "red";
          usernameElement.style.border = "1px solid red";
      }
      else if(valueUsername.length < 6) {
          errorElement.innerHTML = "Trường này nhập tối đa 6 kí tự";
          errorElement.style.color = "red";
          usernameElement.style.border = "1px solid red";
      }
      else {
          errorElement.innerHTML = "";
          usernameElement.style.border = "1px solid rgb(235, 237, 242)";
      } 
      }
      emailElement.onblur = function() {
        const valueEmail = document.getElementById('email').value;
        if (valueEmail == "" ) {
            errorElement3.innerHTML = "Trường này không được để trống";
            errorElement3.style.color = "red";
            emailElement.style.border = "1px solid red";
        }else if(valueEmail.match(/\W/)) {
            errorElement3.innerHTML = "Trường này không được điền ký tự đặc biệt";
            errorElement3.style.color = "red";
            emailElement.style.border = "1px solid red";
        }
        else if(valueEmail.length < 8) {
            errorElement3.innerHTML = "Trường này nhập tối đa 8 kí tự";
            errorElement3.style.color = "red";
            emailElement.style.border = "1px solid red";
        }
        else {
            errorElement3.innerHTML = "";
            emailElement.style.border = "1px solid rgb(235, 237, 242)";
        } 
        }

    passwordElement.onblur = function() {
        const valuePassword = document.getElementById('password').value;
        if (valuePassword == "" ) {
            errorElement2.innerHTML = "Trường này không được để trống";
            errorElement2.style.color = "red";
            passwordElement.style.border = "1px solid red";
        }else if(valuePassword.match(/\W/)) {
            errorElement2.innerHTML = "Trường này không được điền ký tự đặc biệt";
            errorElement2.style.color = "red";
            passwordElement.style.border = "1px solid red";
        }
        else if(valuePassword.length < 6) {
            errorElement2.innerHTML = "Trường này nhập tối đa 6 kí tự";
            errorElement2.style.color = "red";
            passwordElement.style.border = "1px solid red";
        }
        else {
            errorElement2.innerHTML = "";
            passwordElement.style.border = "1px solid rgb(235, 237, 242)";
        } 
        }

</script>
